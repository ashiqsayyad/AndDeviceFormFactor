<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_margin="@dimen/def_padding"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/def_padding"
            card_view:cardCornerRadius="4dp">
        <TextView
            android:id="@+id/width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/top_text_padding"
            style="@style/CustomText"
            android:text="@{@string/width+@string/space+context.resources.displayMetrics.widthPixels}"

           />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/def_padding"
            android:layout_margin="@dimen/def_padding"
            card_view:cardCornerRadius="4dp">
        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomText"
            android:text="@{@string/height+@string/space+context.resources.displayMetrics.heightPixels}"
            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_margin="@dimen/def_padding"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/def_padding"
            card_view:cardCornerRadius="4dp">
        <TextView
            android:id="@+id/density"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomText"
            android:text="@{`Screen Density (dpi dots per inch)`+context.resources.displayMetrics.density}"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/def_padding"
            android:layout_margin="@dimen/def_padding"
            card_view:cardCornerRadius="4dp">

        <TextView
            android:id="@+id/dpi"
            style="@style/CustomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`DensityDpi/PPI(Total dots) `+context.resources.displayMetrics.densityDpi}"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="@dimen/def_padding"
            android:layout_margin="@dimen/def_padding"
            card_view:cardCornerRadius="4dp">
        <TextView
            android:id="@+id/sp"
            style="@style/CustomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`ScaledDensity(SP) `+context.resources.displayMetrics.scaledDensity}"
            />
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>